@page
@model IndexModel
@{
    ViewData["Title"] = Model.Article.First();
}

<div class="text-center">
    <h1 class="display-4 article-title">@Model.Article.First()</h1>

    <form method="post">
        <input class="w-100 article-search" asp-for="ArticleUrl" />
        <br><br>
    </form>

    @if (Model.Article.Count > 1)
    {
        @for (int i = 1; i < Model.Article.Count; i++)
        {
            <p class="text-justify article-paragraph">@Model.Article[i]</p>
        }
    }
</div>
